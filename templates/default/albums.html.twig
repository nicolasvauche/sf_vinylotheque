{% extends 'base.html.twig' %}

{% block title %}Tous tes albums{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/albums.js') }}" defer></script>
{% endblock %}

{% block body_class %}album scrollable{% endblock %}

{% block body %}
    <section class="list">
        <h1>
            <a href="{{ path('app_home') }}">&laquo;</a>&nbsp;
            Tous tes albums
        </h1>

        <div class="app-grid">
            {% for userAlbum in userAlbums %}
                <div class="grid-item">
                    <a href="{{ path('app_album_edit', {'id': userAlbum.album.id}) }}">
                        <img src="{{ asset('img/album/' ~ userAlbum.album.cover) }}" alt="{{ userAlbum.album.title }}" class="item-img" />
                    </a>
                    <a href="{{ path('app_album_edit', {'id': userAlbum.album.id}) }}">
                        <h2 class="item-title">{{ userAlbum.album.title }}</h2>
                        <h3>
                            {{ userAlbum.album.artist.name }}
                        </h3>
                    </a>
                    <p>
                        <a href="{{ path('app_album_edit', {'id': userAlbum.album.id}) }}">
                            {{ userAlbum.album.year }}
                        </a>
                        <a href="#" class="like" data-albumid="{{ userAlbum.album.id }}">
                            <i class="fa-{% if userAlbum.isFavorite %}solid{% else %}regular{% endif %} fa-heart"></i>
                        </a>
                    </p>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
