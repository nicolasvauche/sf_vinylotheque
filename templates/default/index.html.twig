{% extends 'base.html.twig' %}

{% block title %}
    {% if album %}
        On Ã©coute {{ album.artist }} ?
    {% else %}
        Accueil
    {% endif %}
{% endblock %}

{% block meta %}
    {% if id is defined %}
        <meta http-equiv="refresh" content="3;URL=/">
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/home.js') }}" defer></script>
{% endblock %}

{% block body_class %}home{% endblock %}

{% block body %}
    {% if album %}
        <section class="suggestion" data-albumid="{{ album.id }}">
            <figure class="app-image">
                <a href="#" class="action top">
                <span>
                    <i class="fa-solid fa-arrow-up-long"></i>
                </span>
                    <i class="fa-solid fa-circle-play"></i>
                </a>
                <a href="#" class="action left">
                <span>
                    <i class="fa-solid fa-arrow-left-long"></i>
                </span>
                    <i class="fa-solid fa-x"></i>
                </a>
                <a href="#" class="action right">
                <span>
                    <i class="fa-solid fa-arrow-right-long"></i>
                </span>
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <img src="{{ asset('img/album/' ~ album.cover) }}" alt="{{ album.artist ~ ' - ' ~ album.title }}" />
            </figure>

            <div class="infos">
                <div class="content">
                    <h1>{{ album.title }}</h1>
                    <h2>{{ album.artist }}</h2>
                </div>
                <div class="actions">
                    <a href="#" id="like" data-albumid="{{ album.id }}">
                        <i class="fa-{% if userAlbum.favorite %}solid{% else %}regular{% endif %} fa-heart"></i>
                    </a>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}
